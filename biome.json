{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**",
			"!**/public/mockServiceWorker.js",
			"!**/routeTree.gen.ts",
			"!.claude"
		]
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		}
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noExplicitAny": "error"
			}
		}
	}
}
